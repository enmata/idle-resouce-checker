{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DynamoDBReadWriteCreateDestroyAccess",
            "Effect": "Allow",
            "Action": [
                "dynamodb:PutItem",
                "dynamodb:DeleteItem",
                "dynamodb:GetItem",
                "dynamodb:Scan",
                "dynamodb:DeleteTable",
                "dynamodb:CreateTable",
                "dynamodb:DescribeTable",
                "dynamodb:UpdateGlobalTableSettings"
            ],
            "Resource": "arn:aws:dynamodb:eu-west-1:000000000000:table/resources"
        }
    ]
}
